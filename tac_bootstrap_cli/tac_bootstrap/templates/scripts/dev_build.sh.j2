#!/bin/bash
# Build TAC Bootstrap CLI package
# Use this for developing the generator itself

set -e

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
PROJECT_ROOT="$( dirname "$SCRIPT_DIR" )"

echo "TAC Bootstrap CLI - Building"
echo "============================"

cd "$PROJECT_ROOT/tac_bootstrap_cli"

echo "Running type check..."
uv run mypy tac_bootstrap/ --ignore-missing-imports || echo "Type check completed with warnings"

echo ""
echo "Building package..."
uv build

echo ""
echo "Build completed! Package in dist/"
