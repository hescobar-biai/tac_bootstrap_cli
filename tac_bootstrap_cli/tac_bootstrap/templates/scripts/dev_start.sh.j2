#!/bin/bash
# Start TAC Bootstrap CLI in development mode
# Use this for developing the generator itself

set -e

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
PROJECT_ROOT="$( dirname "$SCRIPT_DIR" )"

echo "TAC Bootstrap CLI - Development Mode"
echo "====================================="

# Check if tac_bootstrap_cli exists
if [ ! -d "$PROJECT_ROOT/tac_bootstrap_cli" ]; then
    echo "Warning: tac_bootstrap_cli/ directory not found"
    echo "Run TAREA 1.1 from PLAN_TAC_BOOTSTRAP.md to create it"
    exit 1
fi

cd "$PROJECT_ROOT/tac_bootstrap_cli"

# Show help
uv run tac-bootstrap --help
